@model SenDeOku.Models.OrderDetails

@{
    Layout = "_LayoutKullanici";
}

<div class="container ">
    <div class="row">
        <div class="col-lg-12">
            <br />
            <br />
            <br />
            @try
            {
                <div>
                    <a style="color:black">#<b>@Model.Receipt.ReceiptID</b></a> <a class="pull-right" style="color:black">@Model.Receipt.Date </a><br /><br />
                    <a style="color: black"><b>Sipariş Durumu:</b> @Model.Receipt.Details</a><br /><br />
                    <a style="color:black"><b>Toplam Fiyat: </b>@Model.Receipt.TotalPrice TL</a><br /><br />
                    <a style="color:black"><b>Kargo Firması:</b>@Model.Shippers[0].ShipperName </a><br /><br />
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">
                                ISBN
                            </th>
                            <th scope="col">
                                Kitap Adı
                            </th>
                            <th scope="col">
                                Yazar Adı
                            </th>
                            <th scope="col">
                                Yayın Evi Adı
                            </th>
                            <th scope="col">
                                Adet
                            </th>
                            <th scope="col">
                                Fotoğraf
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{for (int i = 0; i < Model.Books.Count; i++)
                            {
                                <tr>
                                    <td scope="row">
                                        @Model.Books[i].ISBN
                                    </td>
                                    <td>
                                        @Model.Books[i].Name
                                    </td>
                                    <td>
                                        @Model.Authors[i].Name
                                    </td>
                                    <td>
                                        @Model.Publishers[i].Name
                                    </td>
                                    <td>
                                        @Model.Orders[i].BookCount
                                    </td>
                                    <td>
                                        <a>&nbsp;</a>
                                        <a>&nbsp;</a>
                                        <img src="~/mydoc/img/assets/books/@Model.Books[i].Photo" width="40" height="40" />
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            }
            catch
            {

            }
            <br />
            <br />
            <br />
            <br />
        </div>
    </div>
</div>