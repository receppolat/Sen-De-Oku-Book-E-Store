@model SenDeOku.Models.AuthViewModel
@{
    Layout = "_LayoutKullanici";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Giriş yapınız</h2>
                    <form method="post" asp-controller="User" asp-action="Login">
                        <input type="text" name="UserName" placeholder="Kullanıcı Adı" />
                        <input type="password" name="Password" placeholder="Parola" />
                        <button type="submit" class="btn btn-default">Sen De Oku</button>
                    </form>
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">VEYA</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Kayıt Ol</h2>
                    <form method="post" asp-controller="User" asp-action="Register">
                        <input type="text" name="UserName" placeholder="Kullanıcı Adı" />
                        <input type="email" name="Email" placeholder="E-Posta Adresi" />
                        <input type="password" name="Password" placeholder="Parola" />
                        <input type="password" name="ConfirmPassword" placeholder="Parola Onayı" />
                        <button type="submit" class="btn btn-default">Kayıt Ol</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div asp-validation-summary="ModelOnly"></div>
            </div>
        </div>
    </div>
</section>