@model IEnumerable<SenDeOku.Entities.Author>

@{
    Layout = "_LayoutAdmin";
    int i = 0;
}

<div class="container ">
    <div class="row">
        <div class="col-lg-12">
            <a href="@Url.Action("YazarEkle","Admin")" style="color:white; background-color:orange; border-radius:1.0rem"> &nbsp;&nbsp;Ekle&nbsp;&nbsp;</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">
                            Yazar ID
                        </th>
                        <th scope="col">
                            Yazar Adı
                        </th>
                        <th scope="col">
                            Yazar Fotoğrafı
                        </th>
                        <th scope="col">
                            İşlemler
                        </th>
                        @{
                            if (ViewBag.error != "")
                            {
                                <script>
                                    alert("@ViewBag.error")
                                </script>
                            }
                        }
                    </tr>
                </thead>
                <tbody>
                    @{ foreach (var item in Model)
                        {
                            <tr>
                                <td scope="row">
                                    @Html.DisplayFor(modelItem => item.AuthorID)
                                </td>
                                <td scope="row">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <img src="~/mydoc/img/assets/authors/@Html.DisplayFor(modelItem => item.Photo)" width="100" height="100" />
                                </td>
                                <td>
                                    <a asp-action="YazarDuzenle" asp-route-id="@item.AuthorID" style="color:white; background-color:gray; border-radius:0.4rem;">&nbsp;&nbsp;Düzenle&nbsp;&nbsp;</a> &nbsp;&nbsp;&nbsp;
                                    <a asp-action="YazarSil" asp-route-id="@item.AuthorID" style="color:white; background-color:darkgray; border-radius:0.4rem">&nbsp;&nbsp;Sil&nbsp;&nbsp;</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>