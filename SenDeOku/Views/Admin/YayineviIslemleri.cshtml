@model IEnumerable<SenDeOku.Entities.Publisher>

@{
    Layout = "_LayoutAdmin";
}

<div class="container ">
    <div class="row">
        <div class="col-lg-12">
            <a href="@Url.Action("YayineviEkle","Admin")" style="color:white; background-color:orange; border-radius:1.0rem"> &nbsp;&nbsp;Ekle&nbsp;&nbsp;</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">
                            Yayınevi ID
                        </th>
                        <th scope="col">
                            Yayınevi Adı
                        </th>
                        <th scope="col">
                            Yayınevi Fotoğrafı
                        </th>
                        @if (ViewBag.error != "")
                        {
                            <script>
                                alert("@ViewBag.error")
                            </script>
                        }
                    </tr>
                </thead>
                <tbody>
                    @{ foreach (var item in Model)
                        {
                            <tr>
                                <td scope="row">
                                    @Html.DisplayFor(modelItem => item.PublisherID)
                                </td>
                                <td scope="row">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <img src="~/mydoc/img/assets/publishers/@Html.DisplayFor(modelItem => item.Photo)" width="100" height="100" />
                                </td>
                                <td>
                                    <a asp-action="YayineviDuzenle" asp-route-id="@item.PublisherID" style="color:white; background-color:gray; border-radius:0.4rem;">&nbsp;&nbsp;Düzenle&nbsp;&nbsp;</a> &nbsp;&nbsp;&nbsp;
                                    <a asp-action="YayineviSil" asp-route-id="@item.PublisherID" style="color:white; background-color:darkgray; border-radius:0.4rem">&nbsp;&nbsp;Sil&nbsp;&nbsp;</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>