@model SenDeOku.Models.BookAdminListView

@{
    Layout = "_LayoutAdmin";
}

<div class="container ">
    <div class="row">
        <div class="col-lg-12">
            <a href="@Url.Action("KitapEkle","Admin")" style="color:white; background-color:orange; border-radius:1.0rem"> &nbsp;&nbsp;Kitap Ekle&nbsp;&nbsp;</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">
                            ISBN
                        </th>
                        <th scope="col">
                            Kitap Adı
                        </th>
                        <th scope="col">
                            Yazar Adı
                        </th>
                        <th scope="col">
                            Yayınevi Adı
                        </th>
                        <th scope="col">
                            Fotoğraf
                        </th>
                        <th scope="col">
                            İşlemler
                        </th>
                        @if (ViewBag.error != "")
                        {
                            <script>
                                    alert("@ViewBag.error")
                            </script>
                        }
                    </tr>
                </thead>
                <tbody>
                    @{ for (int i = 0; i < Model.Books.Count; i++)
                        {
                            <tr>
                                <td scope="row">
                                    @Html.DisplayFor(modelItem => Model.Books[i].ISBN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Books[i].Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Authors[i].Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Publishers[i].Name)
                                </td>
                                <td>
                                    <a>&nbsp;</a>
                                    <a>&nbsp;</a>
                                    <img src="~/mydoc/img/assets/books/@Html.DisplayFor(modelItem => Model.Books[i].Photo)" width="40" height="40" />
                                </td>
                                <td>
                                    <a asp-action="KitapDetaylari" asp-route-id="@Model.Books[i].BookID" style="color:white; background-color:dimgray; border-radius:0.4rem"> &nbsp;&nbsp;Detaylar&nbsp;&nbsp;</a>&nbsp;&nbsp;&nbsp;
                                    <a asp-action="KitapDuzenle" asp-route-id="@Model.Books[i].BookID" style="color:white; background-color:gray; border-radius:0.4rem;">&nbsp;&nbsp;Düzenle&nbsp;&nbsp;</a> &nbsp;&nbsp;&nbsp;
                                    <a asp-action="KitapSil" asp-route-id="@Model.Books[i].BookID" style="color:white; background-color:darkgray; border-radius:0.4rem">&nbsp;&nbsp;Sil&nbsp;&nbsp;</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>