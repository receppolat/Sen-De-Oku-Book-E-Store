@model SenDeOku.Models.AlintiAddModel

@{
    Layout = "_LayoutAdmin";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Alıntı Ekle</title>
</head>
<body>

    <h4>Alıntı Ekle</h4>
    <hr />
    <div class="container">
        <form asp-action="AlintiEkle" asp-controller="Admin" method="post" class="row d-flex justify-content-center" enctype="multipart/form-data">
            <div class="col-md-4">
                <div>
                    <div class="form-group">
                        <label asp-for="Alinti.AlintiInformation" class="control-label">Alıntı:</label>
                        <textarea name="info" asp-for="Alinti.AlintiInformation" placeholder="Alıntı içeriğini yazınız..." style="width:400px; height:400px"></textarea>
                    </div>
                    <div class="form-group">
                        <label> Kitap Seçiniz.. </label><select asp-for="Alinti.Book.BookID" asp-items="Model.Books"></select><br />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Ekle" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
