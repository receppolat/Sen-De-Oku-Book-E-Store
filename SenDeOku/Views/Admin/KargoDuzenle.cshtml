@model SenDeOku.Models.ShipperAddModel

@{
    Layout = "_LayoutAdmin";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kargo Düzenle</title>
</head>
<body>

    <h4>Kargo Düzenle</h4>
    <hr />
    <div class="container">
        <form asp-action="KargoDuzenle" method="post" class="row d-flex justify-content-center" enctype="multipart/form-data">
            <input type="hidden" asp-for="Shipper.ShipperID" value="@Model.Shipper.ShipperID" />
            <div class="col mb-4">
                <div class="form-group">
                    <label asp-for="Shipper.ShipperName" class="control-label">Kargo Adı:</label>
                    <input asp-for="Shipper.ShipperName" class="form-control" />
                </div>
            </div>
            <div class="col-md-4">
                &nbsp;
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group pull-right">
                            <input type="submit" style="background-color:dimgray" value="Düzenle" class="btn btn-primary float-right" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <a><br /></a>
        <a><br /></a>
        <a><br /></a>
        <a><br /></a>
        <a asp-action="KargoIslemleri" style="color:red">Geri Dön</a>
    </div>
</body>
</html>
